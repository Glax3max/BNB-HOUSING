generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}


model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  listings  Listing[]
}

model Listing {
  id          String   @id @default(uuid())
  title       String
  description String
  price       Int
  location    String
  hostId      String
  host        User     @relation(fields: [hostId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
}

enum Role {
  USER
  HOST
}
